        <Label Content="DIFESA" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblHp" Content="Label" HorizontalAlignment="Left" Margin="81,57,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblAtk" Content="Label" HorizontalAlignment="Left" Margin="81,88,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblDf" Content="Label" HorizontalAlignment="Left" Margin="81,119,0,0" VerticalAlignment="Top"/>

