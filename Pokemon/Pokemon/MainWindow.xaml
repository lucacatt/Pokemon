<Window x:Class="Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Image x:Name="pkm" HorizontalAlignment="Left" Height="318" Margin="193,44,0,0" VerticalAlignment="Top" Width="408"/>
        <Label Content="Squadra" Grid.Column="1" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="34" Width="70"/>
        <Button x:Name="btnIdietro" Content="Indietro" HorizontalAlignment="Left" Margin="193,404,0,0" VerticalAlignment="Top" Click="btnIdietro_Click"/>
        <Button x:Name="btnSeleziona" Content="Seleziona" HorizontalAlignment="Left" Margin="267,404,0,0" VerticalAlignment="Top" Click="btnSeleziona_Click"/>
        <Button x:Name="btnAvanti" Content="Avanti" HorizontalAlignment="Left" Margin="598,404,0,0" VerticalAlignment="Top" Click="btnAvanti_Click"/>
        <Button x:Name="btnStats" Content="Vedi statistiche" HorizontalAlignment="Left" Margin="405,404,0,0" VerticalAlignment="Top" Click="btnStats_Click"/>
        <ListBox x:Name="lb" Margin="8,44,607,145"/>
        <Button x:Name="btnRimuovi" Content="Rimuovi dalla squadra" HorizontalAlignment="Left" Margin="10,404,0,0" VerticalAlignment="Top" Width="155" Click="btnRimuovi_Click"/>
        <Button x:Name="btnLotta" Content="Inizia la lotta" HorizontalAlignment="Center" Margin="0,454,0,0" VerticalAlignment="Top" Width="93" Click="btnLotta_Click"/>
    </Grid>
</Window>
